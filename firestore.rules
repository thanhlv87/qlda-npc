rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user data if authenticated
      allow read: if isSignedIn();

      // Users can only update their own profile
      allow update: if isSignedIn() && request.auth.uid == userId;

      // Only allow create for new user registration
      allow create: if isSignedIn();

      // Admins can delete users
      allow delete: if isSignedIn() && getUserRole() == 'Admin';

      // Notifications subcollection
      match /notifications/{notificationId} {
        // Users can read their own notifications
        allow read: if isSignedIn() && request.auth.uid == userId;

        // Users can update/delete their own notifications (mark as read, delete)
        allow update, delete: if isSignedIn() && request.auth.uid == userId;

        // Cloud Functions can create notifications (using service account)
        // Also allow authenticated users to create (for manual testing)
        allow create: if isSignedIn();
      }
    }

    // Projects collection
    match /projects/{projectId} {
      // All authenticated users can read projects
      allow read: if isSignedIn();

      // Only admins can create/update/delete projects
      allow create, update, delete: if isSignedIn() && getUserRole() == 'Admin';

      // Files subcollection (for documents)
      match /files/{fileId} {
        // All authenticated users can read files
        allow read: if isSignedIn();

        // Users with access to project can create files
        allow create: if isSignedIn();

        // Only uploader or admin can delete files
        allow delete: if isSignedIn() && (
          resource.data.uploadedBy == request.auth.uid ||
          getUserRole() == 'Admin'
        );
      }

      // Folders subcollection
      match /folders/{folderId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && (
          resource.data.createdBy == request.auth.uid ||
          getUserRole() == 'Admin'
        );
      }
    }

    // Reports collection
    match /reports/{reportId} {
      // All authenticated users can read reports
      allow read: if isSignedIn();

      // Project managers and lead supervisors can create reports
      allow create: if isSignedIn();

      // Only admins can update reports
      allow update: if isSignedIn() && getUserRole() == 'Admin';

      // Only admins can delete reports
      allow delete: if isSignedIn() && getUserRole() == 'Admin';
    }
  }
}
